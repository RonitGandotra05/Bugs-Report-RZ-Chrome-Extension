{
  "manifest_version": 3,
  "name": "Screenshot to S3",
  "description": "Take a screenshot and upload it to S3.",
  "version": "1.0",
  "permissions": ["tabs", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Screenshot to S3",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png"
  }
}
