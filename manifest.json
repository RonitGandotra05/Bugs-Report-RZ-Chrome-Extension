{
  "manifest_version": 3,
  "name": "Screenshot to Google Drive",
  "version": "1.0",
  "description": "Take a screenshot and upload it to Google Drive",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "identity",
    "notifications"
  ],
 



  
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "oauth2": {
    "client_id": "696121303773-86dlhqbvmm5dh3qlakvaer6t1csdagpn.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.file"
    ]
  },
  "icons": {
    "128": "icon.png"
  }
}
